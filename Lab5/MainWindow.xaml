<Window x:Class="Lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab5"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1300">
    <Grid>

        <Grid HorizontalAlignment="Center" Height="300" Margin="0,169,0,0" VerticalAlignment="Top" Width="1080">
            <DataGrid x:Name="dataGridClients" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True" FontFamily="Times New Roman" FontSize="15" Margin="0,0,10,0" SelectionChanged="dataGridClients_SelectionChanged" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.Columns>

                    <DataGridTextColumn Header="№ рахунку" Binding="{Binding accountNumber}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Банк" Binding="{Binding bankName}" Width="140"/>
                    <DataGridTextColumn Header="Клієнт" Binding="{Binding clientName}" Width="300"/>
                    <DataGridTextColumn Header="Дата відкриття" Binding="{Binding timeOpen, StringFormat=\{0:dd.MM.yyyy\}}" Width="105">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Дивіденди (%)" Binding="{Binding dividendPercentage}" Width="105">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Тип клієнта" Binding="{Binding clientType}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Валюта" Binding="{Binding currency}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Сума" Binding="{Binding sumMoney}" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        <Button x:Name="newFile" Content="Новий файл" Click="NewFile" HorizontalAlignment="Left" Margin="360,50,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15"/>
        <Button x:Name="selecFtile" Content="Вибрати файл" Click="SelecFile" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15"/>
        <Label x:Name="fileNameLabel" Content="Введіть назву файлу" Visibility="Collapsed" HorizontalAlignment="Left" Height="30" Margin="180,110,0,0" VerticalAlignment="Top" Width="145" FontFamily="Times New Roman" FontSize="15"/>
        <TextBox x:Name="fileName" HorizontalAlignment="Left" Visibility="Collapsed" Height="30" Margin="330,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="213" VerticalContentAlignment="Center"/>
        <Grid Margin="198,509,573,88">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Банк" Margin="10,10,394,252" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25"/>
            <TextBox x:Name="bank" HorizontalAlignment="Left" Margin="140,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" VerticalContentAlignment="Center" FontFamily="Times New Roman"/>

            <Label Content="Клієнт" Margin="10,45,394,217" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25"/>
            <TextBox x:Name="client" HorizontalAlignment="Left" Margin="140,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" VerticalContentAlignment="Center" FontFamily="Times New Roman"/>

            <Label Content="Дата відкриття" Margin="10,80,394,182" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25" Padding="5,2,5,2"/>
            <DatePicker x:Name="dateOpen" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="140,80,0,0"  VerticalAlignment="Top" Width="180" FontFamily="Times New Roman" />

            <Label Content="Дивіденди (%)" Margin="10,115,394,147" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25" Padding="5,2,5,2"/>
            <TextBox x:Name="dividend" HorizontalAlignment="Left" Margin="140,115,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" VerticalContentAlignment="Center" FontFamily="Times New Roman"/>

            <Label Content="Тип клієнта" Margin="10,150,394,112" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25" Padding="5,2,5,2"/>
            <ComboBox x:Name="typeClient" HorizontalAlignment="Left" Margin="140,150,0,0"  VerticalAlignment="Top" Width="180" Height="25" FontFamily="Times New Roman" VerticalContentAlignment="Center">

            </ComboBox>

            <Label Content="Валюта" Margin="10,185,394,77" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25" Padding="5,2,5,2"/>
            <ComboBox x:Name="currency" HorizontalAlignment="Left" Margin="140,185,0,0"  VerticalAlignment="Top" Width="180" Height="25" FontFamily="Times New Roman" VerticalContentAlignment="Center">

            </ComboBox>

            <Label Content="Сума" Margin="10,220,394,42" FontFamily="Times New Roman" FontSize="15" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Height="25" Padding="5,2,5,2"/>
            <TextBox x:Name="maney" HorizontalAlignment="Left" Margin="140,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="25" VerticalContentAlignment="Center" FontFamily="Times New Roman"/>
            <Button x:Name="addClient" Content="Добавити" HorizontalAlignment="Left" Margin="357,118,0,0" VerticalAlignment="Top" Click="AddClient"/>
        </Grid>
        <Button x:Name="saveData" Content="Зберегти" Click="SaveDataF" HorizontalAlignment="Left" Margin="854,50,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="15"/>
    </Grid>
</Window>
