<Window x:Class="Lab_2_GUI.TaskFive"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2_GUI"
        mc:Ignorable="d"
        Title="TaskFive" Height="450" Width="350">
    <Grid>
        <RadioButton x:Name="num_1" GroupName="Sums" Content="" HorizontalAlignment="Left" Margin="101,35,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="num_2" GroupName="Sums" Content="" HorizontalAlignment="Left" Margin="101,69,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="num_3" GroupName="Sums" Content="" HorizontalAlignment="Left" Margin="101,113,0,0" VerticalAlignment="Top"/>
        <Image HorizontalAlignment="Center" Height="25" Margin="0,63,0,0" VerticalAlignment="Top" Width="100" Source="/sum_2.png"/>
        <Image HorizontalAlignment="Center" Height="31" Margin="0,105,0,0" VerticalAlignment="Top" Width="100" Source="/sum_3.png"/>
        <Label Content="Значення n" HorizontalAlignment="Left" Margin="123,145,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="num_n" HorizontalAlignment="Left" Margin="105,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Значення k" HorizontalAlignment="Left" Margin="123,194,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="num_k" HorizontalAlignment="Left" Margin="105,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="task_2" Content="Обчислити" HorizontalAlignment="Left" Margin="105,255,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" Width="120" Height="45" Click="Solution"/>
        <Label x:Name="num_s" Content="" Margin="105,315,0,0"  VerticalAlignment="Top" Height="33" Width="120" FontFamily="Times New Roman" HorizontalAlignment="Left"/>
        <Button x:Name="back" Content="Назад" HorizontalAlignment="Left" Margin="105,360,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" Width="120" Height="45" Click="backClick"/>
        <Image HorizontalAlignment="Center" Height="32" Margin="0,20,0,0" VerticalAlignment="Top" Width="100" Source="/sum_1.png"/>

    </Grid>
</Window>
