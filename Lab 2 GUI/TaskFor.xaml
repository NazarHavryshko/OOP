<Window x:Class="Lab_2_GUI.TaskFor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_2_GUI"
        mc:Ignorable="d"
        Title="TaskFor" Height="500" Width="350">
    <Grid>
        <Label Content="Значення a" HorizontalAlignment="Center" Margin="0,51,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="num_a" HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Значення b" HorizontalAlignment="Center" Margin="0,111,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="num_b" HorizontalAlignment="Center" Margin="0,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Значення c" HorizontalAlignment="Center" Margin="0,171,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="16"/>
        <TextBox x:Name="num_c" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="0,199,0,0"/>

        <Button x:Name="task_1" Content="Обчислити" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" Width="120" Height="45" Click="Solution"/>
        
        <Button x:Name="back" Content="Назад" HorizontalAlignment="Center" Margin="0,405,0,0" VerticalAlignment="Top" FontFamily="Times New Roman" FontSize="20" Width="120" Height="45" Click="backClick"/>

        <Label VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="14" Margin="0,20,0,0" FontFamily="Times New Roman">
            <StackPanel Orientation="Horizontal">
                <TextBlock>
            <Run Text="ax"/>
            <Run Text="2" BaselineAlignment="Superscript" FontSize="10"/>
            <Run Text="+ bx + c = 0"/>
                </TextBlock>
            </StackPanel>
        </Label>

        <Label x:Name="text_x" Content="" Margin="0,300,0,0"  VerticalAlignment="Top" Height="24" Width="160" FontFamily="Times New Roman" FontSize="12" HorizontalAlignment="Center"/>
        <Label x:Name="num_x1" Content="" Margin="0,335,0,0"  VerticalAlignment="Top" Height="24" Width="120" FontFamily="Times New Roman" FontSize="12" HorizontalAlignment="Center"/>
        <Label x:Name="num_x2" Content="" Margin="0,370,0,0"  VerticalAlignment="Top" Height="24" Width="120" FontFamily="Times New Roman" FontSize="12" HorizontalAlignment="Center"/>

    </Grid>
</Window>
